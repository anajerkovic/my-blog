<%- include("partials/header.ejs") %>

<div class="header container-fluid">
<h1 class="blog-text">My Blog</h1>
<p class="blog-text blog-text-small">Express your thoughts and feelings...</p>
</div>
<% if(locals.posts.length === 0) { %>
    <h2 class="no-posts-title">No posts available.</h2>
<% } else { %>
    <ul class="post-list p-5">
        <% posts.forEach(post => { %>
            <li class="single-post container-fluid">
                <a class="post-title" href="/posts/<%= post.id %>"><%= post.title %></a>
                <p class="post-text"><%= post.content %></p>
            </li>
        <% }); %>
    </ul>
<% } %>


